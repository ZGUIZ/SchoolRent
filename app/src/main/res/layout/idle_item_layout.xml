<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/idle_info_item_ll"
    android:orientation="vertical"
    android:background="@drawable/item_ripple"
    android:layout_margin="4dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/info_pic_iv"
        android:src="@drawable/default_icon"
        android:layout_width="match_parent"
        android:layout_height="200dp" />
    <TextView
        android:id="@+id/title_tv"
        android:paddingLeft="8dp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:text="标题"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <View
        android:background="#f3f4f8"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <LinearLayout
        android:padding="8dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.example.amia.schoolrent.View.RoundImageView
            android:id="@+id/user_icon"
            android:src="@drawable/default_icon"
            android:layout_width="40dp"
            android:layout_height="40dp" />
        <RelativeLayout
            android:layout_marginLeft="6dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/user_name_tv"
                android:text="用户名"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/credit_label"
                android:layout_below="@id/user_name_tv"
                android:text="@string/credit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/credit_tv"
                android:text="60"
                android:layout_below="@id/user_name_tv"
                android:layout_toRightOf="@id/credit_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
