<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/bottom_tool"
        android:padding="6dp"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_centerVertical="true"
            android:id="@+id/num_label"
            android:text="申请人数："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/num_label"
            android:text="12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <ScrollView
        android:layout_alignParentTop="true"
        android:layout_above="@id/bottom_tool"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageButton
                    android:id="@+id/back_ib"
                    android:padding="8dp"
                    android:background="?android:selectableItemBackgroundBorderless"
                    android:src="@drawable/back"
                    android:layout_margin="6dp"
                    android:scaleType="fitCenter"
                    android:layout_width="40dp"
                    android:layout_height="40dp" />
                <ImageButton
                    android:padding="8dp"
                    android:background="?android:selectableItemBackgroundBorderless"
                    android:src="@drawable/etc"
                    android:layout_margin="6dp"
                    android:layout_alignParentRight="true"
                    android:scaleType="fitCenter"
                    android:layout_width="40dp"
                    android:layout_height="40dp" />
            </RelativeLayout>
            <LinearLayout
                android:padding="6dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.example.amia.schoolrent.View.RoundImageView
                    android:id="@+id/user_icon_riv"
                    android:src="@drawable/default_icon"
                    android:layout_width="45dp"
                    android:layout_height="45dp" />
                <LinearLayout
                    android:paddingLeft="6dp"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/user_name_tv"
                        android:text="用户名"
                        android:textSize="20dp"
                        android:textColor="@android:color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/credit_tv"
                        android:text="信用分："
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:background="#f3f4f8"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <LinearLayout
                android:layout_marginLeft="6dp"
                android:layout_marginTop="6dp"

                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="@string/deposit"
                    android:textColor="@android:color/holo_red_light"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/deposit_value_tv"
                    android:text="800"
                    android:textSize="20dp"
                    android:textColor="@android:color/holo_red_light"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_margin="6dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="@string/rental"
                    android:textColor="@android:color/holo_red_light"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/rental_value_tv"
                    android:text="800"
                    android:textSize="20dp"
                    android:textColor="@android:color/holo_red_light"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <TextView
                android:id="@+id/idle_info_detail"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:textColor="@android:color/black"
                android:textSize="18dp"
                android:text="商品描述"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <View
                android:layout_margin="6dp"
                android:background="#f3f4f8"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <LinearLayout
                android:id="@+id/idle_info_ll"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></LinearLayout>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
