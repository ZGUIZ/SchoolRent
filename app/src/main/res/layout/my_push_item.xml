<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:padding="3dp"
    android:layout_marginBottom="1dp"
    android:clipChildren="false">

    <RelativeLayout
        android:id="@+id/slide_itemView"
        android:clipChildren="false"
        android:tag="slide_flag"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/user_info_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/default_icon"
                android:id="@+id/idle_icon"
                android:layout_marginRight="6dp"
                android:layout_width="40dp"
                android:layout_height="40dp" />
            <TextView
                android:id="@+id/title_tv"
                android:textColor="@android:color/black"
                android:layout_toRightOf="@id/idle_icon"
                android:text="标题"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/unit"
                android:layout_marginTop="4dp"
                android:textColor="@android:color/holo_red_light"
                android:layout_toRightOf="@+id/idle_icon"
                android:layout_below="@id/title_tv"
                android:text="￥"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/money"
                android:textColor="@android:color/holo_red_light"
                android:text="0.0"
                android:layout_marginTop="4dp"
                android:layout_toRightOf="@+id/unit"
                android:paddingRight="3dp"
                android:layout_below="@id/title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/split"
                android:text="/"
                android:layout_marginTop="4dp"
                android:layout_below="@id/title_tv"
                android:layout_toRightOf="@id/money"
                android:textColor="@android:color/holo_red_light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/deposit"
                android:textColor="@android:color/holo_red_light"
                android:text="0.0"
                android:layout_marginTop="4dp"
                android:layout_toRightOf="@+id/split"
                android:paddingRight="3dp"
                android:layout_below="@id/title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/status"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:text="状态"
                android:layout_marginRight="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>


        <LinearLayout
            android:id="@+id/slide"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/user_info_rl"
            android:clipChildren="false"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/edit_tv"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:background="#FE3C31"
                android:gravity="center"
                android:text="@string/edit"
                android:textColor="#ffffff" />
            <TextView
                android:id="@+id/close_tv"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:background="#FE3C31"
                android:gravity="center"
                android:text="@string/close_btn"
                android:textColor="#ffffff" />
        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>