<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/sche_dialog_tv"
        android:textColor="@android:color/black"
        android:padding="10dp"
        android:textSize="20dp"
        android:textAlignment="center"
        android:text="@string/eval"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:id="@+id/picker_layout"
        android:padding="10dp"
        android:orientation="vertical"
        android:layout_below="@id/sche_dialog_tv"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/fill_eval"
            android:hint="@string/fill_eval"
            android:inputType="textMultiLine"
            android:padding="6dp"
            android:gravity="left|top"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="90dp" />
        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/score_label"
                android:layout_centerVertical="true"
                android:textSize="18dp"
                android:text="@string/fill_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <RatingBar
                android:id="@+id/rating_bar"
                android:layout_toRightOf="@id/score_label"
                android:layout_marginLeft="10dp"
                android:numStars="5"
                android:rating="3"
                android:stepSize="1"
                style="@style/RadingStyle"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_above="@id/picker_layout"
        android:background="#cccccc"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <View
        android:id="@+id/second_line"
        android:layout_below="@id/picker_layout"
        android:background="#cccccc"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <LinearLayout
        android:layout_below="@id/second_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/positiveButton"
            android:text="确定"
            android:background="?android:selectableItemBackground"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <View
            android:background="#cccccc"
            android:layout_width="1dp"
            android:layout_height="match_parent"/>
        <Button
            android:id="@+id/negativeButton"
            android:text="取消"
            android:background="?android:selectableItemBackground"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
    </LinearLayout>
</RelativeLayout>
