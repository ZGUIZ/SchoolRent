<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/my_request_item_rl"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    android:background="@drawable/search_border"
    android:padding="3dp"
    android:layout_marginBottom="1dp">

    <RelativeLayout
        android:id="@+id/slide_itemView"
        android:clipChildren="false"
        android:tag="slide_flag"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:src="@drawable/default_icon"
            android:id="@+id/idle_icon"
            android:layout_marginRight="6dp"
            android:layout_width="40dp"
            android:layout_height="40dp" />
        <TextView
            android:id="@+id/title_tv"
            android:textColor="@android:color/black"
            android:layout_toRightOf="@id/idle_icon"
            android:text="标题"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/unit"
            android:layout_marginTop="4dp"
            android:textColor="@android:color/holo_red_light"
            android:layout_toRightOf="@+id/idle_icon"
            android:layout_below="@id/title_tv"
            android:text="￥"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/money"
            android:textColor="@android:color/holo_red_light"
            android:text="0.0"
            android:layout_marginTop="4dp"
            android:layout_toRightOf="@+id/unit"
            android:paddingRight="3dp"
            android:layout_below="@id/title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/split"
            android:text="/"
            android:layout_marginTop="4dp"
            android:layout_below="@id/title_tv"
            android:layout_toRightOf="@id/money"
            android:textColor="@android:color/holo_red_light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/deposit"
            android:textColor="@android:color/holo_red_light"
            android:text="0.0"
            android:layout_marginTop="4dp"
            android:layout_toRightOf="@+id/split"
            android:paddingRight="3dp"
            android:layout_below="@id/title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/status"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:text="状态"
            android:layout_marginRight="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <View
        android:id="@+id/span_line"
        android:padding="3dp"
        android:layout_below="@id/slide_itemView"
        android:background="#f3f4f8"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <LinearLayout
        android:layout_below="@id/span_line"
        android:layout_alignParentRight="true"
        android:layout_marginRight="3dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/return_back"
            android:text="@string/return_back"
            android:layout_margin="3dp"
            android:textColor="#1C86AE"
            android:background="@drawable/button_ripple"
            android:layout_width="wrap_content"
            android:layout_height="35dp" />
    </LinearLayout>

</RelativeLayout>