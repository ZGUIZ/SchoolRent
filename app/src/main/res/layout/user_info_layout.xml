<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:orientation="vertical"
android:fitsSystemWindows="true"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:background="@android:color/white"
android:layout_alignParentBottom="true">
    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar"
        android:fitsSystemWindows="true">
        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:expandedTitleMarginStart="48dp"
            app:expandedTitleMarginEnd="64dp">
            <RelativeLayout
                android:layout_marginTop="6dp"
                android:padding="3dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <com.example.amia.schoolrent.View.RoundImageView
                    android:id="@+id/user_icon"
                    android:layout_margin="6dp"
                    android:src="@drawable/default_icon"
                    android:layout_width="60dp"
                    android:layout_height="60dp" />
                <TextView
                    android:id="@+id/user_name"
                    android:layout_alignTop="@id/user_icon"
                    android:layout_toRightOf="@id/user_icon"
                    android:text="用户名"
                    android:textSize="18dp"
                    android:textColor="@android:color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/real_name"
                    android:layout_marginTop="6dp"
                    android:text="真实姓名"
                    android:layout_toRightOf="@id/user_icon"
                    android:layout_below="@id/user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:id="@+id/real_name_validate"
                    android:layout_marginTop="6dp"
                    android:layout_marginLeft="6dp"
                    android:layout_below="@id/user_name"
                    android:layout_toRightOf="@id/real_name"
                    android:src="@drawable/unvalidate"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />

                <TextView
                    android:id="@+id/student_id_label"
                    android:layout_marginTop="6dp"
                    android:text="@string/student_id"
                    android:layout_toRightOf="@id/user_icon"
                    android:layout_below="@id/real_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/student_id"
                    android:layout_marginTop="6dp"
                    android:text="学号"
                    android:layout_marginLeft="6dp"
                    android:layout_toRightOf="@id/phone"
                    android:layout_below="@id/real_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:id="@+id/student_id_validate"
                    android:layout_marginTop="6dp"
                    android:layout_marginLeft="6dp"
                    android:layout_below="@id/real_name"
                    android:layout_toRightOf="@id/student_id"
                    android:src="@drawable/unvalidate"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />

                <TextView
                    android:id="@+id/sex"
                    android:layout_marginTop="6dp"
                    android:text="@string/sex"
                    android:layout_toRightOf="@id/user_icon"
                    android:layout_below="@id/student_id_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/sex_tv"
                    android:layout_marginTop="6dp"
                    android:text="性别"
                    android:layout_marginLeft="6dp"
                    android:layout_toRightOf="@id/student_id"
                    android:layout_alignLeft="@id/telephone"
                    android:layout_below="@id/student_id_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/phone"
                    android:layout_marginTop="6dp"
                    android:text="@string/telephone"
                    android:layout_toRightOf="@id/user_icon"
                    android:layout_below="@id/sex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/telephone"
                    android:layout_marginTop="6dp"
                    android:text="@string/telephone"
                    android:layout_marginLeft="6dp"
                    android:layout_toRightOf="@id/phone"
                    android:layout_below="@id/sex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/mail"
                    android:layout_marginTop="6dp"
                    android:text="@string/mail"
                    android:layout_toRightOf="@id/user_icon"
                    android:layout_below="@id/phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/email"
                    android:layout_marginTop="6dp"
                    android:text="@string/mail"
                    android:layout_marginLeft="6dp"
                    android:layout_toRightOf="@id/phone"
                    android:layout_below="@id/phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/score"
                    android:layout_alignTop="@id/user_icon"
                    android:text="0"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="6dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="@string/credit"
                    android:layout_alignTop="@id/user_icon"
                    android:layout_toLeftOf="@id/score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>
    <LinearLayout
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <android.support.design.widget.TabLayout
            android:id="@+id/tab_layout1"
            android:layout_below="@id/user_icon"
            app:tabGravity="fill"
            app:tabMode="fixed"
            app:tabTextColor="#000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <View
            android:layout_below="@id/tab_layout1"
            android:background="#cccccc"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <android.support.v4.view.ViewPager
            android:id="@+id/view_pager1"
            android:layout_below="@id/tab_layout1"
            android:layout_width="match_parent"
            android:layout_height="350dp"/>
    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>