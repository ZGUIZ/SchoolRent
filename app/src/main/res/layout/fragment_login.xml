        android:background="@drawable/login_text_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/school_iv"
            android:layout_marginLeft="5dp"
            android:layout_centerVertical="true"
            android:background="@drawable/school"
            android:layout_width="25dp"
            android:layout_height="25dp" />
        <EditText
            android:id="@+id/school_input"
            android:hint="@string/select_school"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="5dp"
            android:layout_toRightOf="@id/school_iv"
            android:layout_width="match_parent"
            android:background="@null"
            android:layout_height="40dp" />
    </RelativeLayout>-->
    <RelativeLayout
        android:id="@+id/user_ll"
        android:layout_centerInParent="true"
        android:layout_marginBottom="25dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/login_text_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/user_iv"
            android:layout_marginLeft="5dp"
            android:layout_centerVertical="true"
            android:background="@drawable/user"
            android:layout_width="25dp"
            android:layout_height="25dp" />
        <EditText
            android:id="@+id/account"
            android:layout_toRightOf="@id/user_iv"
            android:layout_centerVertical="true"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="5dp"
            android:background="@null"
            android:hint="@string/user_name"
            android:layout_width="match_parent"
            android:layout_height="40dp" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginBottom="25dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/password_ll"
        android:background="@drawable/login_text_background"
        android:layout_below="@id/user_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/pass_iv"
            android:layout_centerVertical="true"
            android:background="@drawable/password"
            android:layout_marginLeft="5dp"
            android:layout_width="25dp"
            android:layout_height="25dp" />
        <EditText
            android:id="@+id/password"
            android:layout_toRightOf="@id/pass_iv"
            android:inputType="textPassword"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="5dp"
            android:layout_centerVertical="true"
            android:background="@null"
            android:hint="@string/password"
            android:layout_width="match_parent"
            android:layout_height="40dp" />
    </RelativeLayout>
    <LinearLayout
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:orientation="vertical"
        android:layout_below="@id/password_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/login_btn"
            android:text="@string/login"
            style="?android:attr/borderlessButtonStyle"
            android:background="@drawable/login_click_ripple"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/forgot_tv"
            android:textAlignment="center"
            android:layout_marginTop="6dp"
            android:textColor="@android:color/white"
            android:text="@string/forgot_password"
            android:background="?android:selectableItemBackgroundBorderless"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/progress_view"
        android:background="#66000000"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!--<com.rey.material.widget.ProgressView
            android:layout_centerInParent="true"
            app:pv_autostart="true"
